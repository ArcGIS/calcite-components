{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", "npm:unpublishSafe", "workarounds:typesNodeVersioning"],
  "platformCommit": true,
  "rangeStrategy": "pin",
  "enabledManagers": ["npm"],
  "timezone": "America/Los_Angeles",
  "schedule": ["before 5am on tuesday and thursday"],
  "labels": ["dependencies"],
  "ignoreDeps": [
    "@types/jest",
    "@types/react",
    "@types/react-dom",
    "chalk",
    "cheerio",
    "jest",
    "jest-cli",
    "puppeteer",
    "react",
    "react-dom",
    "ts-jest",
    "typescript"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "semanticCommitType": "build",
      "addLabels": ["chore"]
    },
    {
      "matchPackageNames": ["@stencil/core"],
      "semanticCommitType": "feat",
      "semanticCommitScope": "stencil",
      "addLabels": ["enhancement"]
    },
    {
      "matchPackageNames": ["@floating-ui/dom"],
      "semanticCommitType": "feat",
      "semanticCommitScope": "floating-ui",
      "addLabels": ["enhancement"]
    }
  ]
}
