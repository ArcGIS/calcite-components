{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":onlyNpm", "npm:unpublishSafe", "workarounds:typesNodeVersioning"],
  "platformCommit": true,
  "rangeStrategy": "pin",
  "timezone": "America/Los_Angeles",
  "schedule": ["before 9am on wednesday"],
  "ignoreDeps": [
    "@types/jest",
    "@types/react",
    "@types/react-dom",
    "chalk",
    "cheerio",
    "jest",
    "jest-cli",
    "puppeteer",
    "react",
    "react-dom",
    "ts-jest",
    "typescript"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "semanticCommitType": "build"
    },
    {
      "matchPackageNames": ["@stencil/core"],
      "labels": ["feat"],
      "semanticCommitType": "feat",
      "semanticCommitScope": "stencil"
    },
    {
      "matchPackageNames": ["@floating-ui/dom"],
      "labels": ["feat"],
      "semanticCommitType": "feat",
      "semanticCommitScope": "floating-ui"
    }
  ]
}
