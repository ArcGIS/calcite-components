{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "changelogPreset": {
    "name": "conventionalcommits",
    "issueUrlFormat": "{{host}}/{{owner}}/{{repository}}/issues/{{id}}",
    "commitUrlFormat": "{{host}}/{{owner}}/{{repository}}/commit/{{hash}}",
    "issuePrefixes": ["#"],
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "revert",
        "section": "Reverts"
      },
      {
        "type": "perf",
        "section": "Performance Improvements"
      },
      {
        "type": "deprecation",
        "section": "Deprecations"
      },
      {
        "type": "chore",
        "hidden": true
      },
      {
        "type": "docs",
        "hidden": true
      },
      {
        "type": "style",
        "hidden": true
      },
      {
        "type": "refactor",
        "hidden": true
      },
      {
        "type": "test",
        "hidden": true
      }
    ]
  },
  "command": {
    "version": {
      "conventionalCommits": true,
      "allowBranch": ["main", "rc", "dev"],
      "exact": true
    }
  }
}
