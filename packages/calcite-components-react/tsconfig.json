{
  "extends": "tsconfig/base",
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2015"],
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "dist",
    "removeComments": false,
    "skipLibCheck": true,
    "target": "es2015"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
