{
  "action-pad-grid": {
    "border": {
      "light": {
        "value": "$semantic.ui.color.border.1.light",
        "type": "color"
      },
      "dark": {
        "value": "$semantic.ui.color.border.1.dark",
        "type": "color"
      }
    },
    "background": {
      "light": {
        "value": "$semantic.ui.color.foreground.1.light",
        "type": "color"
      },
      "dark": {
        "value": "$semantic.ui.color.foreground.1.dark",
        "type": "color"
      }
    },
    "border-radius": {
      "sm": {
        "value": "$core.border.border-radius.1",
        "type": "borderRadius"
      },
      "md": {
        "value": "$core.border.border-radius.1",
        "type": "borderRadius"
      },
      "lg": {
        "value": "$core.border.border-radius.1",
        "type": "borderRadius"
      }
    },
    "space-between": {
      "sm": {
        "value": "$core.spacing.none",
        "type": "spacing"
      },
      "md": {
        "value": "$core.spacing.none",
        "type": "spacing"
      },
      "lg": {
        "value": "$core.spacing.none",
        "type": "spacing"
      }
    },
    "space-around": {
      "sm": {
        "value": "$core.spacing.none",
        "type": "spacing"
      },
      "md": {
        "value": "$core.spacing.none",
        "type": "spacing"
      },
      "lg": {
        "value": "$core.spacing.none",
        "type": "spacing"
      }
    },
    "[specific-element]": {
      "font": {
        "sm": {
          "value": {
            "typography": "$[comp-name].font.sm",
            "fontWeights": "$core.font.font-weight.medium-italic"
          },
          "type": "composition"
        },
        "md": {
          "value": {
            "typography": "$[comp-name].font.md",
            "fontWeights": "$core.font.font-weight.medium-italic"
          },
          "type": "composition"
        },
        "lg": {
          "value": {
            "typography": "$[comp-name].font.lg",
            "fontWeights": "$core.font.font-weight.medium-italic"
          },
          "type": "composition"
        }
      }
    },
    "shadow": {
      "sm": {
        "value": "{core.box-shadow.1}",
        "type": "boxShadow"
      },
      "md": {
        "value": "{core.box-shadow.1}",
        "type": "boxShadow"
      },
      "lg": {
        "value": "{core.box-shadow.1}",
        "type": "boxShadow"
      }
    }
  }
}
