{
  "extends": ["tslint-config-prettier"],
  "rules": {
    "component-member-order": {
      "severity": "warn"
    },
    "lifecycle-order": {
      "severity": "warn"
    },
    "prefer-conditional-expression": {
      "severity": "warn"
    }
  },
  "exclude": ["node_modules", "support/output-targets/calcite-components-react"],
  "rulesDirectory": ["node_modules/tslint-stencil/rules"]
}
